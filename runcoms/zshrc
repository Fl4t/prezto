#
# Executes commands at the start of an interactive session.
#
# Authors:
#   Sorin Ionescu <sorin.ionescu@gmail.com>
#

# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Customize to your needs...

# Souvent à modifier
alias vimrc='vim ~/.vimrc'
alias gvimrc='vim ~/.gvimrc'
alias zshrc='vim ~/.zshrc'
alias sozsh='source ~/.zshrc'

# ls commands
alias ls++='LC_ALL=en_US.UTF-8 LANG=en ls++'
alias lsd='ls -ld .*' # List only dot files

# modified commands
alias ping='ping -c 5'
alias mysql='mysql -u root -p'

# shortcut
alias q='exit'
alias c='clear'
alias wee='weechat-curses'
alias tree='nocorrect tree'

# DA2I
alias jd='javadoc -d doc sources/*java'
alias jc='javac -sourcepath sources/ -d classes/ -classpath classes/ sources/*.java'
alias jex='java -classpath classes'
alias jdir='mkdir classes doc sources'
alias gvim='gvim --remote-silent'

# Sourcing de l'api J2EE
export CLASSPATH="$CLASSPATH:$HOME/tomcat/lib/servlet-api.jar"

if [[ "$OSTYPE" == linux-gnu ]]; then

  # Mes binaires avant les autres
  export PATH="$HOME/bin:$PATH"

  # Activer fasd
  eval "$(fasd --init auto)"

  # Redémarre le serveur tomcat
  alias tomreload='$HOME/tomcat/bin/startup.sh && $HOME/tomcat/bin/shutdown.sh'

  # Avoir les commandes java
  export JAVA_HOME="/usr/lib/jvm/java-6-sun"
  export PATH=$PATH:"$JAVA_HOME/bin"

  # Sourcing du driver PostgreSQL
  export CLASSPATH="$CLASSPATH:.:..:$HOME/Documents/da2i/bddr/driver/driver_postgresql.jar"

else

  # Sourcing du driver PostgreSQL
  export CLASSPATH="$CLASSPATH:.:..:$HOME/Documents/workspace/da2i/bddr/driver/driver_postgresql.jar"

fi

# RVM (vimgolf)
# Load RVM into a shell session *as a function*
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"
